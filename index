  <script>
    function calculateResult() {
      // Check if all questions are answered
      const totalQuestions = 5;
      let answeredQuestions = 0;
      
      for (let i = 1; i <= totalQuestions; i++) {
        const radios = document.querySelectorAll(`input[name="q${i}"]`);
        let hasAnswer = false;
        for (const radio of radios) {
          if (radio.checked) {
            hasAnswer = true;
            break;
          }
        }
        if (hasAnswer) answeredQuestions++;
      }
      
      if (answeredQuestions < totalQuestions) {
        alert('Please answer all questions before discovering your season.');
        return;
      }
      
      // Count votes for each season
      const seasonCounts = {
        fire: 0,
        fog: 0,
        framework: 0,
        ash: 0
      };
      
      // Tally up the answers
      for (let i = 1; i <= totalQuestions; i++) {
        const radios = document.querySelectorAll(`input[name="q${i}"]`);
        for (const radio of radios) {
          if (radio.checked && seasonCounts.hasOwnProperty(radio.value)) {
            seasonCounts[radio.value]++;
            break;
          }
        }
      }
      
      // Find the season with the most votes
      let winningSeasons = [];
      let maxCount = Math.max(...Object.values(seasonCounts));
      
      for (const [season, count] of Object.entries(seasonCounts)) {
        if (count === maxCount) {
          winningSeasons.push(season);
        }
      }
      
      // If there's a tie, use a priority order: fire > framework > fog > ash
      const priorityOrder = ['fire', 'framework', 'fog', 'ash'];
      let finalSeason = winningSeasons[0];
      
      for (const season of priorityOrder) {
        if (winningSeasons.includes(season)) {
          finalSeason = season;
          break;
        }
      }
      
      // Hide all results first
      const allResults = document.querySelectorAll('.result');
      allResults.forEach(result => result.style.display = 'none');
      
      // Show the winning result
      const winningResult = document.getElementById(`result-${finalSeason}`);
      if (winningResult) {
        winningResult.style.display = 'block';
        
        // Smooth scroll to result
        winningResult.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'start' 
        });
      }
      
      // Update button text
      document.getElementById('submitBtn').textContent = 'Retake Quiz';
    }
    
    // Enable/disable submit button based on completion
    document.addEventListener('change', function(e) {
      if (e.target.type === 'radio') {
        const totalQuestions = 5;
        let answeredQuestions = 0;
        
        for (let i = 1; i <= totalQuestions; i++) {
          const radios = document.querySelectorAll(`input[name="q${i}"]`);
          for (const radio of radios) {
            if (radio.checked) {
              answeredQuestions++;
              break;
            }
          }
        }
        
        const submitBtn = document.getElementById('submitBtn');
        if (answeredQuestions === totalQuestions) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Discover Your Season';
        } else {
          submitBtn.disabled = true;
          submitBtn.textContent = `Answer ${totalQuestions - answeredQuestions} more question${totalQuestions - answeredQuestions === 1 ? '' : 's'}`;
        }
      }
    });
    
    // Initialize button state
    document.getElementById('submitBtn').disabled = true;
    document.getElementById('submitBtn').textContent = 'Answer 5 questions';
  </script>
